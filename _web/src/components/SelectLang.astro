---
import { languages } from '../_i18n/ui';
import { getLangFromUrl, useTranslatedPath } from '../_i18n/utils';

const lang = getLangFromUrl(Astro.url) ?? "";
const traslatedPath = useTranslatedPath(lang as any);
---
<ul>
  {Object.entries(languages).map(([lang, label]) => (
    <li>
      <a href={traslatedPath("/", lang)}>{label}</a>
    </li>
  ))}
</ul>