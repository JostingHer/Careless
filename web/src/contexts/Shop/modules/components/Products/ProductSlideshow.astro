---
import "swiper/css";
import "swiper/css/pagination";

interface Props {
  images: string[];
}

const { images } = Astro.props;

const fullImages = images.map((image) => {
  return image.startsWith("http")
    ? image
    : `${import.meta.env.PUBLIC_URL}/images/products/${image}`;
});
---

<div class="product-swiper">
  <div class="product-swiper__wrapper swiper-wrapper">
    {
      fullImages.map((image) => (
        <div class="product-swiper__slide swiper-slide">
          <img
            src={image}
            alt="Product image"
            class="product-swiper__image"
          />
        </div>
      ))
    }
  </div>
  <div class="product-swiper__pagination swiper-pagination"></div>
</div>

<style>
  .product-swiper {
    width: 100%;
    height: 400px;
  }

  @media (min-width: 640px) {
    .product-swiper {
      height: 600px;
    }
  }

  .product-swiper__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    padding-left: 2rem;
    padding-right: 2rem;
  }
</style>

<script>
  import Swiper from "swiper";
  import { Pagination } from "swiper/modules";

  document.addEventListener("astro:page-load", () => {
    const swiper = new Swiper(".product-swiper", {
      pagination: {
        el: ".product-swiper__pagination",
      },
      modules: [Pagination],
    });
  });
</script>
