---
import { CartCounter } from "../Cart/CartCounter";
---

<!-- Navbar component -->
<nav class="navbar">
  <h1 class="navbar__title">
    <a href="/">BeC@reless</a>
  </h1>
  <div class="navbar__links">
    <ul class="navbar__list">
      <li class="navbar__item navbar__item--cart">
        <CartCounter client:only="react" transition:persist />
      </li>
      <li class="navbar__item navbar__item--home">
        <a href="/">Home</a>
      </li>
    </ul>
  </div>
</nav>

<style>
  /* Navbar.css */

/* Navbar container */
.navbar {
  display: flex;
  justify-content: space-between;
  padding: 2.5rem 5rem; /* 10px (default padding) */
  align-items: center;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 10;
  height: 5rem;
  background-color: #F9F9F9;
}

/* Navbar title */
.navbar__title {
  font-size: 1.25rem; /* 20px */
  font-weight: bold;
  color: #4B5563; /* Text Gray-800 */
}

.navbar__title a {
  color: inherit;
  text-decoration: none;
}

/* Navbar links */
.navbar__links {
  display: flex;
  align-items: center;
}

/* Navbar list */
.navbar__list {
  display: flex;
  align-items: center;
  gap: 1.5rem; /* Space between items */
  list-style-type: none;
  padding: 0;
  margin: 0;
}

/* Navbar items */
.navbar__item {
  font-weight: 600;
  color: #4B5563; /* Text Gray-700 */
}

.navbar__item a {
  text-decoration: none;
  color: inherit;
}

/* Specific styling for Home link */
.navbar__item--home a {
  color: #4B5563;
}

/* Mobile-first styles */
@media (min-width: 640px) {
  .navbar {
    padding: 2.5rem 5rem;
  }
}

@media (min-width: 768px) {
  .navbar__title {
    font-size: 1.5rem;
  }

  .navbar__item {
    font-size: 1rem; /* Adjust item text size on larger screens */
  }
}

</style>
