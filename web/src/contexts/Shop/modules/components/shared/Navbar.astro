---
import type { SharedContext } from "@/common/astro";
import { CartCounter } from "../Cart/CartCounter";
---

<nav class="navbar">
  
  <div class="navbar__links">
    <ul class="navbar__list">
      <li class="navbar__item navbar__item--cart">
        <CartCounter client:only="react" transition:persist />
      </li>
      <li class="navbar__item navbar__item--home">
        <a href="/">BeC@reless</a>
      </li>
   
      <li class="navbar__item navbar__item--home">
        <a href="/streetwear-para-bailarines/">Streetwear</a>
      </li>
      <li class="navbar__item navbar__item--home">
        <a href="/musica-2025/">musica-2025</a>
      </li>
      <li class="navbar__item navbar__item--home">
        <a href="/products">Productos</a>
      </li>
    </ul>
  </div>
</nav>

<style>
/* Navbar container */
.navbar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 1.5rem 2.5rem;
  position: fixed;
  top: 0;
  width: 100%;
  height: 4.5rem;
  z-index: 50;
  background-color: rgba(255, 255, 255, 0.5); /* semi-transparente */
  backdrop-filter: blur(12px); /* efecto difuminado */
  -webkit-backdrop-filter: blur(12px);
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.05); /* sombra sutil */
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

/* Navbar title */
.navbar__title {
  font-size: 1.25rem;
  font-weight: bold;
  color: #1F2937;
}

.navbar__title a {
  color: inherit;
  text-decoration: none;
}

/* Navbar links */
.navbar__links {
  display: flex;
  align-items: center;
}

/* Navbar list */
.navbar__list {
  display: flex;
  align-items: center;
  gap: 1.5rem;
  list-style: none;
  padding: 0;
  margin: 0;
}

/* Navbar items */
.navbar__item {
  font-weight: 600;
  font-size: 0.95rem;
  color: #1F2937;
  transition: color 0.2s ease;
}

.navbar__item a {
  text-decoration: none;
  color: inherit;
}

.navbar__item:hover a {
  color: #111827;
}

/* Responsive */
@media (min-width: 768px) {
  .navbar__title {
    font-size: 1.5rem;
  }

  .navbar__item {
    font-size: 1rem;
  }
}
</style>
