---
import { getLangFromUrl } from "@/i18n/utils";
import "./../styles/index.scss";
import SelectLang from "@/components/SelectLang.astro";
import type { Page, PrototypePage } from "@/shared/utils/typesGenerals";
import sanityClient from "@/shared/sanity/client";


const lang = getLangFromUrl(Astro.url);


const { id, title, language  } = Astro.props;

let data;

if(id){
    data = await sanityClient.fetch<(Page | PrototypePage) & { _id: string } & { name: string }>
    (`*[_id == "${id}" ][0]`);
} 



---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
