---
import { getCollection } from "astro:content";
import { getSlugWithLang } from "@global-shared/translations/utils/getSlugWithLang";
import Home from "@/landings/home/Home.astro";

export async function getStaticPaths() {
  const landingsList = await getCollection("home");

  return landingsList.map((landing) => {
    return {
      params: {
        home: `${getSlugWithLang("/", landing.data.language)}`,
      },
      props: {
        data: landing.data,
      },
    };
  });
}

const { data } = Astro.props;
---

<Home _id={data._id} />
