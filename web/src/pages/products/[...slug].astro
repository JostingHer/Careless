---
import { getCollection } from "astro:content";
import AuthorBlogPage from "@/contexts/Blog/modules/AuthorBlogPage.astro";
import { seedProducts } from "@/contexts/Shop/infraestructure/seed-data";
import MainLayout from "@/contexts/Shop/modules/MainLayout.astro";
import ProductSlideshow from "@/contexts/Shop/modules/components/Products/ProductSlideshow.astro";
import SectionContainer from "@/common/modules/SectionContainer/SectionContainer.astro";

export async function getStaticPaths() {
  const landingsList = seedProducts;

  const paths = landingsList.map((landing) => {
    return {
      params: {
        slug: landing.slug,
      },
      props: {
        data: landing,
      },
    };
  });
  console.log("paths", paths);

  return paths;
}

const { data } = Astro.props;

const product = data;

const images = product.images.map((image) => {
  return image.startsWith("http")
    ? image
    : `${import.meta.env.PUBLIC_URL}/images/products/${image}`;
});

console.log("data", data);
---

<MainLayout title={product.title} description={product.description}>
  
  <SectionContainer>
    <div class="product">
      <img
      src={images[0]}
      alt={product.title}
      class="product-card__image"
    />
      <section class="product__details">
        <h2 class="product__title">{product.title}</h2>
        <h2 class="product__price">${product.price}</h2>
  
        <h3 class="product__subtitle">Tallas</h3>
        <ul class="product__sizes">
          {
            product.sizes.map((size) => (
              <li class="product__size-option">{size}</li>
            ))
          }
        </ul>
  
        <h3 class="product__subtitle">Cantidad</h3>
        <div class="product__quantity">
          <button class="product__btn-quantity">-</button>
          <input class="product__input" type="number" min="1" value="1" />
          <button class="product__btn-quantity">+</button>
        </div>
  
        <button class="product__add-to-cart">Añadir al carrito</button>
  
        <h3 class="product__subtitle">Descripción</h3>
        <p>{product.description}</p>
      </section>
    </div>
  
    <input type="hidden" id="product-id" value={product.slug} />
  </SectionContainer>


</MainLayout>
<style>
  .product {
    display: grid;
    gap: 1rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .product {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .product__details {
    padding: 0 1rem;
  }

  .product__title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.25rem;
  }

  .product__price {
    font-weight: bold;
    margin-bottom: 1.5rem;
  }

  .product__subtitle {
    font-weight: bold;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .product__sizes {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
    padding: 0;
    list-style: none;
    margin: 0;
  }

  .product__size-option {
    border: 1px solid #ccc;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .product__size-option:hover {
    text-decoration: underline;
  }

  .product__size-option--selected {
    color: #3b82f6;
    font-weight: bold;
    text-decoration: underline;
  }

  .product__quantity {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .product__btn-quantity {
    width: 2.5rem;
    padding: 0.5rem;
    border: 1px solid #ccc;
    background: white;
    cursor: pointer;
    transition: background 0.2s;
  }

  .product__btn-quantity:hover {
    background-color: #f3f4f6;
  }

  .product__input {
    width: 4rem;
    text-align: center;
    padding: 0.5rem;
    border: 1px solid #ccc;
  }

  .product__add-to-cart {
    margin-top: 1.5rem;
    width: 100%;
    padding: 0.75rem;
    background-color: #3b82f6;
    color: white;
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .product__add-to-cart:disabled {
    opacity: 0.5;
  }

  input[type="number"]::-webkit-outer-spin-button,
  input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  input[type="number"] {
    -moz-appearance: textfield;
  }
</style>
