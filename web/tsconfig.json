{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "./src/common/astro.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2023",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@global-shared/*": [
        "../shared/*"
      ],
      "@sections/*": [
        "./src/sections/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@common/*": [
        "./src/common/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@translations/*": [
        "./src/translations/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ],
    }
  }
}
